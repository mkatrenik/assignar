{
  "moduleFileExtensions": ["ts", "tsx", "js", "json"],
  "transform": {
    "^.+\\.tsx?$": "<rootDir>/../node_modules/ts-jest/preprocessor.js"
  },
  "testMatch": ["**/__tests__/**/*.(spec|test).ts?(x)"],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,tsx,ts}",
    "!src/typings/**",
    "!**/node_modules/**",
    "!**/vendor/**"
  ],
  "coverageReporters": ["json", "lcov"],
  "globals": {
    "ts-jest": {
      "tsConfigFile": "./tsconfig.json"
    }
  }
}
